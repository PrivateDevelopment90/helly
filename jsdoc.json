{
    "source": {
		"includePattern": ".ts$",
		"excludePattern": "(.github/|node_modules/|docs/|build/|examples/)"
    },
	"plugins": [
		"plugins/markdown",
		"node_modules/jsdoc-babel"
	],
    "opts": {
        "encoding": "utf8", 
        "destination": "./docs/",
        "recurse": true,
		"verbose": true,
		"template": "./node_modules/clean-jsdoc-theme",
		"theme_opts": {
		  "title": "helly",
		  "theme": "dark",
		  "meta": [
			{
			  "name": "og:site_name",
			  "content": "helly Documentation"
			},
			{
			  "name": "og:title",
			  "content": "helly"
			},
			{
			  "name": "description",
			  "content": "A minimalist and perfomance-focused library in development designed to interact with Discord API."
			},
			{
			  "name": "og:description",
			  "content": "A minimalist and perfomance-focused library in development designed to interact with Discord API."
			},
			{
			  "name": "theme-color",
			  "content": "#808080"
			}
		  ],
		  "menu": [
			{
			  "title": "GitHub",
			  "link": "https://github.com/denkylabs/helly",
			  "target": "_blank"
			},
			{
			  "title": "Support",
			  "link": "https://discord.gg/",
			  "target": "_blank"
			}
		  ]
		}
    },
	"babel": {
		"extensions": ["ts"],
		"babelrc": false,
		"presets": [
			["@babel/preset-env", { "targets": { "node": true } }],
			["@babel/preset-typescript", { "allowDeclareFields": true }]
		]
	}
}